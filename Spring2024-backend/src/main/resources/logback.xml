<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Определение свойств -->
	<property name="APP_NAME" value="Spring2024" />

	<property name="LOG_PATH" value="/etc/logs" />
	<property name="CONSOLE_LOG_PATTERN"
		value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
	<property name="FILE_LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
	<!-- Настройки уровня логирования -->
	<property name="LOG_LEVEL" value="INFO" />

	<!-- Консолидный аппендер -->
	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<!-- Настройка аппендера для записи в файл -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/${APP_NAME}.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/archived/${APP_NAME}-%d{yyyy-MM-dd}.%i.log.gz
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>
	
	   <!-- Настройка аппендера для записи в файл -->
    <appender name="PM"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/spring/${APP_NAME}.log</file>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/spring/${APP_NAME}-%d{yyyy-MM-dd}.%i.log.gz
            </fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

	<!-- Настройка уровней логирования -->
	<logger name="ru.asocial" level="DEBUG" >
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />                     
        <appender-ref ref="PM" />        
	</logger>

	<!-- Корневой уровень логирования -->
	<root level="${LOG_LEVEL}">
		<appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />        		
	</root>

</configuration>